<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1>乗馬メニュー</h1>
      <%= link_to '新規追加',new_menu_path, class: 'btn btn-primary my-2' %>
    </div>
  </section>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
      <% @menus.each do |menu| %>
        <div class="card m-2">
          <div class="card-header bg-success text-light">
            <%= menu.title %>
          </div>
          <div class="card-body bg-light">
            <blockquote class="blockquote mb-0">
            <% if menu.image? %>
              <%= image_tag menu.image.url, class: "card-img-left mb-3", size: '350x200' %>
            <% else %>
              <%= image_tag "/assets/default.png", :size => '100x100' %>
            <% end %>
              <p class="small text-success"><%= menu.memo %></p>
              <footer class="blockquote-footer">所要時間： <cite title="Source Title"><%= menu.time.strftime('%M分') %></cite></footer>
            </blockquote>
          </div>
          <div class="card-body">
              <%= link_to '編集', edit_menu_path(menu), class: 'card-link btn btn-primary' %>
              <%= link_to '削除', menu_path(menu), class: 'card-link btn btn-primary', method: :delete %>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
