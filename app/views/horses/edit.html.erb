<div class="container mw-md">
  <%= form_for @horse do |f|%>
    <% if @horse.image? %>
      <%= image_tag @horse.image.url %>
    <% else %>
      <%= image_tag "/assets/default.png", :size => '100x100' %>
    <% end %>
    <div class="form-group">
      <label class="control-label">名前</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label  class="control-label">品種</label>
      <%= f.text_field :variety, class: "form-control" %>
    </div>
    <div class="form-group">
      <label  class="control-label">性別</label>
      <%= f.text_field :sex, class: "form-control" %>
    </div>
    <div class="form-group">
      <label  class="control-label">毛色</label>
      <%= f.text_field :color, class: "form-control" %>
    </div>
    <div class="form-group">
      <label  class="control-label">競走馬名号</label>
      <%= f.text_field :race_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label  class="control-label">生年月日</label>
      <%= f.date_field :birthday, class: "form-control"%>
    </div>
    <div class="form-group">
      <label  class="control-label">入厩日</label>
      <%= f.date_field :entry, class: "form-control"%>
    </div>
    <div class="form-group">
      <label  class="control-label">所属</label>
      <%= f.text_field :memo, class: "form-control" %>
    </div>
    <div class="form-group">
      <label  class="control-label">写真</label><br>
      <button type="button" class="btn btn-outline-secondary rounded-pill btn-block">
        <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: 'btn-block'%>
      </button>
    </div>
    <div class="form-group">
      <%= f.submit '更新する', class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  <% end %>
</div>
